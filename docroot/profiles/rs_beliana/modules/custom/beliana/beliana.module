/**
 * @inheritdoc
 */
function beliana_sync_from_remote_form($form, $form_state, $node) {
  $remote_id = empty($node->field_remote_id[LANGUAGE_NONE]) ? $node->nid : $node->field_remote_id[LANGUAGE_NONE][0]['value'];

  $form['links'] = [
    '#markup' => 'Heslo v {knižnom | webovom} redakčnom systéme: ' . $remote_id . '.<br>Po prevzatím obsahu z {knižného | webového} redakčného systému bude lokálny obsah prepísaný.<br><br>',
  ];

  if (!empty($node->field_datum_prebratia[LANGUAGE_NONE])) {
    $form['message'] = [
      '#markup' => 'Dátum posledného prenosu obsahu: ' . $node->field_datum_prebratia[LANGUAGE_NONE][0]['value'] . '.<br><br>',
    ];
  }

  $form['nid'] = [
    '#type' => 'hidden',
    '#value' => $node->nid,
  ];

  $form['remote_id'] = [
    '#type' => 'hidden',
    '#value' => $remote_id,
  ];

  $form['submit'] = [
    '#type' => 'submit',
    '#value' => 'Prebrať',
  ];

  return $form;
}

function beliana_sync_from_remote_form_submit($form, &$form_state) {
  if ($remote_node = beliana_api_rest_get_node($form_state['values']['remote_id'])) {
    if (in_array($remote_node->workbench_moderation->current->state, [
      'zaradene',
      'publikovane_na_webe',
    ])) {
      $node = node_load($form_state['values']['nid']);
      $fields_to_skip = [
        'field_remote_id',
        'field_ilustracia',
        'field_zlucene_z',
        'field_zlucene_do',
        'field_komentar_instrukcie',
        'field_datum_autorovho_textu',
      ];

      foreach ($remote_node as $field => $data) {
        if (!empty($data)) {
          $value = json_decode(json_encode($data), TRUE);

          if (($field == 'uid' || $field == 'title' || strpos($field, 'field_') === 0) && !in_array($field, $fields_to_skip)) {
            $node->{$field} = $value;
          }

          if ($field == 'field_datum_autorovho_textu') {
            $node->field_datum_autorovho_textu[LANGUAGE_NONE][0]['value'] = '1970-01-01 00:00:00';
          }

          if ($field == 'field_komentar_instrukcie') {
            $node->field_komentar_instrukcie[LANGUAGE_NONE][0]['value'] = 'Obsah prevzatý z {knižného | webového} RS. ' . $value[0]['value'];
          }

          if (in_array($field, [
            'field_ilustracia',
            'field_zlucene_z',
            'field_zlucene_do',
          ])) {
            $node->{$field}[LANGUAGE_NONE] = [];
            foreach ($value[LANGUAGE_NONE] as $delta => $ilustracia) {
              if ($target_remote_node = beliana_api_rest_get_node($ilustracia['target_id'])) {
                $node->{$field}[LANGUAGE_NONE][$delta]['target_id'] = empty($target_remote_node->field_remote_id->und) ? $target_remote_node->nid : $target_remote_node->field_remote_id->und[0]->value;
              }
            }
          }
        }
      }

      $node->field_datum_prebratia = [LANGUAGE_NONE => [['value' => date('Y-m-d H:i:s')]]];

      if ($node->type == 'ilustracia') {
        $node->workbench_moderation['current']->state = 'ilustracia_u_redaktora';
      }
      else {
        $node->workbench_moderation['current']->state = 'needs_review';
      }


      $message_log = 'Obsah prevzatý z {knižného|webového} RS';
      if (strpos($node->log, $message_log) !== FALSE) {
        $node->log .= '.' . $message_log;
      }

      node_save($node);
      drupal_set_message(t('Helso @id prebratá', ['@id' => $form_state['values']['remote_id']]));
    }
    else {
      drupal_set_message(t('Preberané heslo @id nieje dokončené', ['@id' => $form_state['values']['remote_id']]), 'error');
    }
  }
  else {
    drupal_set_message(t('Nepodarilo sa prevziať heslo @id', ['@id' => $form_state['values']['remote_id']]), 'error');
  }
}

